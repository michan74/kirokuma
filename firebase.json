{
  "functions": [
    {
      "source": "functions/line-webhook",
      "codebase": "line-webhook",
      "runtime": "nodejs24",
      "dockerImage": "Dockerfile",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    },
    {
      "source": "functions/python-video",
      "codebase": "python-video",
      "runtime": "python310",
      "ignore": [
        "__pycache__",
        ".git",
        "*.pyc",
        "Dockerfile",
        "Dockerfile.dev",
        "README.md"
      ]
    },
    {
      "source": "functions/python-video-generator",
      "codebase": "python-video-generator",
      "runtime": "python311",
      "ignore": [
        "__pycache__",
        ".git",
        "*.pyc",
        "Dockerfile",
        "README.md"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
